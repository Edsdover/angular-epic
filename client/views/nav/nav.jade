nav.navbar.navbar-default(ng-controller='NavCtrl')
  .container-fluid
    .navbar-header
      button.navbar-toggle.collapsed(data-toggle="collapse", data-target="#navbar")
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(ui-sref='home') f1-index
    #navbar.collapse.navbar-collapse
      ul.nav.navbar-nav.navbar-left(ng-show='activeUser')
        li: a(ui-sref='dashboards'): i.fa.fa.fa-info &nbsp; Dashboard
        li: a(ui-sref='predictions.new'): i.fa.fa.fa-cog &nbsp; Prediction Control
      ul.nav.navbar-nav.navbar-right(ng-show='activeUser')
        li: a(ui-sref='profile'): i.fa.fa-reddit &nbsp; Profile
        li: a(ng-click='logout()'): i.fa.fa-sign-out.hoverHand &nbsp; Logout of: {{displayName}}
      ul.nav.navbar-nav.navbar-right(ng-hide='activeUser')
        li: a(ui-sref='register'): i.fa.fa-user-plus &nbsp; Register
        li: a(ui-sref='login'): i.fa.fa-key &nbsp; Login
