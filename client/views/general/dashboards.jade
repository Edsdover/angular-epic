h2 DashBoard
.col-md-5.col-md-offset-1.col-xs-11
  form(name='userForm', novalidate)
    .form-group
      h3.underline.bold.predictionHeader {{user.name}}'s Profile
  .row
      img.img-responsive.img-thumbnail#photo(ng-src='{{user.photo}}')
  .row
      img.img-responsive.img-thumbnail#avatar(ng-src='{{user.avatar}}')
  .row
      h4 {{user.username}}
      h4 {{user.email}}
      h4 {{user.phone}}
      button.btn.btn-xs.btn-warning(ng-click='editProfile()') Edit Profile
.col-md-5.col-xs-11
  form(name='userForm', novalidate)
    .form-group
      h3.underline.bold.predictionHeader Profile Stats
      h4 Your Points This Season: {{prediction.last}}
      h4 Your Rank This Season: {{user.rank}}
      button.btn.btn-success.button(ng-click='newPrediction()') Make Predictions
      h4.underline Last Race Result:
.row
  .col-xs-12
    h3#history.underline.center.bold Prediction History
